
rules_version = '2';

function isAgencyMember(agencyId) {
    return exists(/databases/$(database)/documents/agencies/$(agencyId)/teamMembers/$(request.auth.uid));
}

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow any authenticated user to read/write to any valid document path.
    // This is a broad rule for development and can be tightened later.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    match /agencies/{agencyId} {
       allow read: if request.auth.uid == agencyId || isAgencyMember(agencyId);
       allow write: if request.auth.uid == agencyId;
    }
    
    // This rule allows any authenticated member of an agency to read/write to its subcollections.
    match /agencies/{agencyId}/{subcollection}/{documentId} {
      allow read, write: if isAgencyMember(agencyId);
    }
    
    // Admin can read/write to inbox messages, members can create.
    match /agencies/{agencyId}/inboxMessages/{messageId} {
      allow read, update, delete: if request.auth.uid == resource.data.agency_id; // Admin is owner
      allow create: if isAgencyMember(agencyId);
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

     match /agents/{agentId} {
       allow read, write: if request.auth.uid == agentId;
    }

    match /upgradeRequests/{requestId} {
      allow create: if request.auth != null;
    }

    match /invitations/{inviteId} {
      // Allow creation if the user is authenticated (Agency Owner)
      allow create: if request.auth != null;
      // Allow READ/UPDATE only if the 'toEmail' field matches the logged-in user's email
      allow read, update: if request.auth != null && resource.data.toEmail == request.auth.token.email;
    }
  }
}
