
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAgencyMember(agencyId) {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.agency_id == agencyId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    function isEditor() {
       return isSignedIn() && exists(/databases/$(database)/documents/roles_editor/$(request.auth.uid));
    }

    function isAgent() {
        return isSignedIn() && exists(/databases/$(database)/documents/roles_agent/$(request.auth.uid));
    }
    
    // Admins have full read/write access everywhere
    match /{path=**} {
        allow read, write: if isAdmin();
    }


    // User-specific rules
    match /users/{userId} {
      // Any signed-in user can create their own user document upon signup.
      // Admin can create documents for new team members.
      allow create: if isOwner(userId) || isAdmin();
      
      // Users can read their own profile.
      // Agency members (editors, agents) can read the profiles of other users within the same agency.
      allow get: if isOwner(userId) || isAgencyMember(resource.data.agency_id);
      
      // Users can update their own profile.
      allow update: if isOwner(userId);

      // Listing all users is denied for privacy.
      allow list: if false;
      allow delete: if isOwner(userId) || isAdmin();

      // Properties Subcollection
      match /properties/{propertyId} {
        // Editors and Agents can read properties of their agency.
        allow read: if isAgencyMember(resource.data.agency_id);
        // Editors can create and update properties. Agents cannot.
        allow write: if isEditor() && isAgencyMember(request.resource.data.agency_id);
      }

      // Buyers Subcollection
      match /buyers/{buyerId} {
        // Editors and Agents can read buyers of their agency.
        allow read: if isAgencyMember(resource.data.agency_id);
        // Editors can update buyers.
        allow update: if isEditor() && isAgencyMember(request.resource.data.agency_id);
        // Agents and Editors can create new buyers.
        allow create: if (isEditor() || isAgent()) && isAgencyMember(request.resource.data.agency_id);
         // Editors can delete buyers.
        allow delete: if isEditor();
      }

      // Appointments, Follow-ups, Activities
      match /appointments/{appointmentId} {
        allow read, write: if isAgencyMember(request.resource.data.agency_id);
      }
      match /followUps/{followUpId} {
        allow read, write: if isAgencyMember(request.resource.data.agency_id);
      }
      match /activityLogs/{activityLogId} {
        allow read, write: if isAgencyMember(request.resource.data.agency_id);
      }

      // Team Members subcollection (only admin can access)
      match /teamMembers/{memberId} {
        allow read, write: if isAdmin() && isOwner(userId);
      }
    }
    
    // Role collections
    match /roles_admin/{userId} {
        allow read, write: if isAdmin();
    }
     match /roles_editor/{userId} {
        allow read, write: if isAdmin();
    }
     match /roles_agent/{userId} {
        allow read, write: if isAdmin();
    }
    
    // Global Collections (Admin only)
    match /transactions/{transactionId} {
      allow read, write: if isAdmin();
    }
     match /activityLogs/{activityLogId} {
      allow read, write: if false; // Deprecated
    }
  }
}

    