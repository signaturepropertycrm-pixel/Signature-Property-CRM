
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    function isEditor() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Editor' || isAdmin());
    }

    function isAgent() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Agent';
    }
    
    function isMemberOfAgency(agencyId) {
        return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.agency_id == agencyId;
    }
    
    function getRole() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // =================================
    // Collection Rules
    // =================================

    // Rules for the /users collection
    match /users/{userId} {
      // Any signed-in user can create their own document (on signup)
      allow create: if isSignedIn() && request.auth.uid == userId;
      // Users can read or update their own profile. Admin can update any user profile in their agency.
      allow read, update: if isSignedIn() && request.auth.uid == userId;
      // Only admin can delete users (not fully implemented in UI, but good for security)
      allow delete: if isAdmin();
    }
    
    // Rules for top-level role indicator collections
    match /roles_admin/{userId} {
      allow read, write: if isAdmin() && request.auth.uid == userId;
    }
    match /roles_agent/{userId} {
      allow read: if isMemberOfAgency(get(/databases/$(database)/documents/users/$(userId)).data.agency_id);
      allow write: if isAdmin();
    }
    match /roles_editor/{userId} {
      allow read: if isMemberOfAgency(get(/databases/$(database)/documents/users/$(userId)).data.agency_id);
      allow write: if isAdmin();
    }

    // Rules for the /agencies collection and its sub-collections
    match /agencies/{agencyId} {
      // The agency owner can read/write their own agency document
      allow read, write: if isSignedIn() && request.auth.uid == resource.data.ownerId;

      // Rules for team members sub-collection
      match /teamMembers/{memberId} {
        // Any member of the agency can read the team list
        allow read: if isMemberOfAgency(agencyId);
        // Only the Admin of the agency can add, update, or delete team members
        allow write: if isMemberOfAgency(agencyId) && getRole() == 'Admin';
      }

      // Rules for properties sub-collection
      match /properties/{propertyId} {
        // Any member of the agency can read properties
        allow read: if isMemberOfAgency(agencyId);
        // Only Admin or Editor can create/delete properties
        allow create, delete: if isMemberOfAgency(agencyId) && (getRole() == 'Admin' || getRole() == 'Editor');
        // Admin/Editor can update everything. Agent can only update status-related fields.
        allow update: if (isMemberOfAgency(agencyId) && (getRole() == 'Admin' || getRole() == 'Editor')) ||
                      (isMemberOfAgency(agencyId) && getRole() == 'Agent' && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'sold_at', 'sold_price', 'is_recorded', 'video_links']));
      }

      // Rules for buyers sub-collection
      match /buyers/{buyerId} {
        // Any agency member can read or create buyers
        allow read, create: if isMemberOfAgency(agencyId);
        // Admin/Editor can delete.
        allow delete: if isMemberOfAgency(agencyId) && (getRole() == 'Admin' || getRole() == 'Editor');
        // Admin/Editor can update everything. Agent can only update status and follow-up notes.
        allow update: if (isMemberOfAgency(agencyId) && (getRole() == 'Admin' || getRole() == 'Editor')) ||
                      (isMemberOfAgency(agencyId) && getRole() == 'Agent' && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'last_follow_up_note', 'is_deleted']));
      }

      // Rules for appointments, follow-ups, activities
      match /appointments/{appointmentId} {
        allow read, write: if isMemberOfAgency(agencyId);
      }

      match /followUps/{followUpId} {
        allow read, write: if isMemberOfAgency(agencyId);
      }
      
      match /activityLogs/{activityLogId} {
        allow read: if isMemberOfAgency(agencyId) && (getRole() == 'Admin' || getRole() == 'Editor');
        allow create: if isMemberOfAgency(agencyId);
        allow update, delete: if false; // Logs should be immutable
      }
    }
  }
}
