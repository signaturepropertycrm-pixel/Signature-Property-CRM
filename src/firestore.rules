
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAgencyMember() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.agency_id == get(/databases/$(database)/documents/users/$(resource.id)).data.agency_id;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.agency_id;
    }
    
    function isEditor() {
       return isSignedIn() && exists(/databases/$(database)/documents/roles_editor/$(request.auth.uid));
    }

    function isAgent() {
        return isSignedIn() && exists(/databases/$(database)/documents/roles_agent/$(request.auth.uid));
    }
    
    // Admins have full read/write access everywhere
    match /{path=**} {
        allow read, write: if isAdmin();
    }


    // User-specific rules
    match /users/{userId} {
      allow create: if isOwner(userId) || isAdmin();
      allow get: if isOwner(userId) || isAgencyMember();
      allow update: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow delete: if isAdmin();

      // Properties Subcollection
      match /properties/{propertyId} {
        // Editors and Agents can read properties of their agency.
        allow read: if isEditor() || isAgent();
        // Editors can create and update properties. Agents cannot.
        allow write: if isEditor();
      }

      // Buyers Subcollection
      match /buyers/{buyerId} {
        allow read: if isEditor() || isAgent();
        // Agents can create new buyers.
        allow create: if isAgent() || isEditor();
        // Editors can update buyers. Agents can only update status.
        allow update: if isEditor() || (isAgent() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'last_follow_up_note']));
        // Editors can delete buyers.
        allow delete: if isEditor();
      }

      // Appointments, Follow-ups, Activities
      match /appointments/{appointmentId} {
        allow read, write: if isEditor() || isAgent();
      }
      match /followUps/{followUpId} {
        allow read, write: if isEditor() || isAgent();
      }
      match /activityLogs/{activityLogId} {
        allow read, write: if isEditor() || isAgent();
      }

      // Team Members subcollection (only admin can access)
      match /teamMembers/{memberId} {
        allow read, write: if isAdmin() && isOwner(userId);
      }
    }
    
    // Role collections
    match /roles_admin/{userId} {
        allow read, write: if isAdmin();
    }
     match /roles_editor/{userId} {
        allow read, write: if isAdmin();
    }
     match /roles_agent/{userId} {
        allow read, write: if isAdmin();
    }
    
    // Global Collections (Admin only)
    match /transactions/{transactionId} {
      allow read, write: if isAdmin();
    }
     match /activityLogs/{activityLogId} {
      allow read, write: if false; // Deprecated
    }
  }
}
