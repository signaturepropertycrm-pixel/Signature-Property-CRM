
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(docId) {
      return request.auth.uid == docId;
    }

    // =================================
    // Collection Rules
    // =================================
    
    // Admins can manage their own agency document
    match /agencies/{agencyId} {
      allow read, write: if isSignedIn() && isOwner(agencyId);
    }
    
    // Agents can manage their own agent document
    match /agents/{agentId} {
      allow read, write: if isSignedIn() && isOwner(agentId);
    }
    
    // Default open rules: Allow read/write access to any authenticated user for other paths.
    // This is a permissive rule that can be tightened later.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
