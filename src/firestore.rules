
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ✅ OVERRIDE: Allow avatar update only – no auth needed
    match /agencies/{agencyId} {
      allow update: if request.resource.data.keys().hasOnly(['avatar']);
    }

    match /agents/{agentId} {
      allow update: if request.resource.data.keys().hasOnly(['avatar']);
    }

    // ✅ Your old rules – untouched
    match /{path=**} {
      allow read, write: if request.auth != null && path.size() % 2 == 1;
    }

    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

    