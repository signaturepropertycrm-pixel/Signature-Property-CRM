
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Function to check if a user is an admin of the given agency.
    function isAdmin(agencyId) {
      return isOwner(agencyId);
    }
    
    // =================================
    // Collection Rules
    // =================================

    // Rules for the /users collection
    // This collection holds login accounts.
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create: if isSignedIn();
      allow update: if isOwner(userId);
      allow delete: if false; 
    }

    // Rules for the /agencies collection
    match /agencies/{agencyId} {
      // Only the agency owner (Admin) can manage the agency document.
      allow read, create, update, delete: if isAdmin(agencyId);

      // Rules for subcollections within an agency
      match /properties/{propertyId} {
        allow read, write: if isAdmin(agencyId);
      }

      match /buyers/{buyerId} {
        allow read, write: if isAdmin(agencyId);
      }
      
      // An Admin can create/delete members. An Agent can accept an invitation.
      match /teamMembers/{memberId} {
        // Any authenticated user can check for their own invitations
        allow get, list: if isSignedIn();
        // An admin can write (create/delete). An agent can update their own status to 'Active'.
        allow write: if isAdmin(agencyId) || 
                     (isSignedIn() && request.resource.data.status == 'Active' && request.resource.data.email == request.auth.token.email);
      }
      
      match /appointments/{appointmentId} {
        allow read, write: if isAdmin(agencyId);
      }

      match /followUps/{followUpId} {
        allow read, write: if isAdmin(agencyId);
      }
      
      match /activityLogs/{activityLogId} {
        allow read: if isAdmin(agencyId);
        allow create: if isAdmin(agencyId);
        allow update, delete: if false; // Logs should be immutable
      }
    }
    
    // Agent-specific data rules. This is the Agent's personal sandbox. 
    // The wildcard {document=**} grants access to all subcollections within the agent's document.
    match /agents/{agentId}/{document=**} {
        allow read, write: if isOwner(agentId);
    }
    
    // Top-level role indicators are no longer needed with this model.
    match /roles_admin/{userId} { allow read, write: if false; }
    match /roles_agent/{userId} { allow read, write: if false; }
    match /roles_editor/{userId} { allow read, write: if false; }
  }
}
