
rules_version = '2';

function isSuperAdmin() {
  return request.auth.token.email == 'usmansagheer444@gmail.com';
}

function isAgencyMember(agencyId) {
    return exists(/databases/$(database)/documents/agencies/$(agencyId)/teamMembers/$(request.auth.uid));
}

service cloud.firestore {
  match /databases/{database}/documents {

    match /agencies/{agencyId} {
       allow read: if request.auth.uid == agencyId || isAgencyMember(agencyId);
       allow write: if isSuperAdmin() || request.auth.uid == agencyId;
    }
    
    // This rule allows any authenticated member of an agency to read/write to its subcollections.
    match /agencies/{agencyId}/{subcollection}/{documentId} {
      allow read, write: if isAgencyMember(agencyId);
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

     match /agents/{agentId} {
       allow read, write: if request.auth.uid == agentId;
    }

    match /upgradeRequests/{requestId} {
      allow read, write: if isSuperAdmin();
      allow create: if request.auth != null;
    }
  }
}
