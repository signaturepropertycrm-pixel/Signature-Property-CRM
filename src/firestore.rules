/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for most data, with admin overrides for specific collections.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles. Only the user themselves can read or write their profile.
 * - /users/{userId}/properties/{propertyId}: Stores properties created by each user. Only the creating user can manage their properties.
 * - /users/{userId}/buyers/{buyerId}: Stores buyer information created by each user. Only the creating user can manage their buyers.
 * - /users/{userId}/appointments/{appointmentId}: Stores appointment data related to users (agents).
 * - /users/{userId}/teamMembers/{memberId}: Stores team member data for a user.
 * - /users/{userId}/followUps/{followUpId}: Stores follow-up actions assigned to users.
 * - /transactions/{transactionId}: Stores transaction data. Only admins can manage transactions.
 * - /activityLogs/{activityLogId}: Stores activity logs. Only admins can read activity logs.
 * - /roles_admin/{userId}: Indicates admin privileges. The existence of a document grants admin privileges to the corresponding user.
 *
 * Key Security Decisions:
 * - User listing is disallowed for privacy.
 * - Admin role is checked via the existence of a document in the `/roles_admin/{userId}` collection.
 * - Data validation is relaxed in this prototyping phase.
 *
 * Denormalization for Authorization:
 * - The `properties`, `buyers`, `appointments` and `followUps` subcollections under `/users/{userId}` include the `createdBy` and other user ID fields. This eliminates the need for `get()` calls in security rules to check parent document properties, enabling atomic operations.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the current user is signed in.
     * @example isSignedIn() == true if request.auth != null
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the current user is the owner of the document.
     * @param {string} userId - The user ID to compare against the request's auth UID.
     * @example isOwner("someUserId") == (request.auth.uid == "someUserId")
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the current user is the owner of the existing document.
     * @param {string} userId - The user ID to compare against the request's auth UID.
     * @example isExistingOwner("someUserId") == (isOwner("someUserId") && resource != null)
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Checks if the current user has admin privileges.
     * @example isAdmin() == exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
     */
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * @description Allows access only to the user who owns the resource.
     * @path /users/{userId}
     * @allow (get) User with ID 'user123' requests their own profile.
     * @deny (get) User with ID 'user456' requests profile of 'user123'.
     * @principle Enforces document ownership for reads and writes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // User listing is not allowed.
      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);

      /**
       * @description Allows access only to the user who owns the property.
       * @path /users/{userId}/properties/{propertyId}
       */
      match /properties/{propertyId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }

      /**
       * @description Allows access only to the user who owns the buyer record.
       * @path /users/{userId}/buyers/{buyerId}
       */
      match /buyers/{buyerId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
      
      /**
       * @description Allows access only to the user who owns the team member record.
       * @path /users/{userId}/teamMembers
       */
      match /teamMembers {
        allow list: if isOwner(userId);
      }
      match /teamMembers/{memberId} {
        allow get: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }

      /**
       * @description Allows access only to the user (agent) associated with the appointment or to admins.
       * @path /users/{userId}/appointments/{appointmentId}
       */
      match /appointments/{appointmentId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isOwner(userId) || isAdmin();
      }

      /**
       * @description Allows access only to the user assigned to the follow-up.
       * @path /users/{userId}/followUps/{followUpId}
       */
      match /followUps/{followUpId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }

      /**
       * @description Allows access only to admins for reading activity logs. This is nested under users
       * because activity logs are user-specific.
       * @path /users/{userId}/activityLogs/{activityLogId}
       */
      match /activityLogs/{activityLogId} {
        allow read: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId);
        allow update: if false;
        allow delete: if false;
      }
    }


    /**
     * @description Allows access only to admins for managing transactions.
     * @path /transactions/{transactionId}
     */
    match /transactions/{transactionId} {
      allow read, write: if isAdmin();
    }

    /**
     * @description This collection is deprecated in favor of user-specific activity logs.
     * Rules are set to deny all access for security.
     * @path /activityLogs/{activityLogId}
     */
    match /activityLogs/{activityLogId} {
      allow read, write: if false;
    }

    /**
     * @description Allows only admins to create a role
     * @path /roles_admin/{userId}
     */
    match /roles_admin/{userId} {
        allow read, write: if isAdmin();
    }
  }
}
