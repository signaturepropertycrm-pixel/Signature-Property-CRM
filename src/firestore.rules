
rules_version = '2';

function isSuperAdmin() {
  return request.auth.token.email == 'demo_admin@signaturecrm.test';
}

service cloud.firestore {
  match /databases/{database}/documents {

    match /{path=**}/teamMembers/{memberId} {
      allow list: if request.query.email == request.auth.token.email
                  && request.query.status == 'Pending';
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /agencies/{agencyId} {
       allow read: if request.auth.uid == agencyId;
       allow write: if isSuperAdmin() || request.auth.uid == agencyId;
    }

     match /agents/{agentId} {
       allow read, write: if request.auth.uid == agentId;
    }

    match /upgradeRequests/{requestId} {
      allow read, write: if isSuperAdmin();
      allow create: if request.auth != null;
    }

    // Fallback rules
    match /{path=**} {
      allow read, write: if request.auth != null && path.size() % 2 == 1;
    }

    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
