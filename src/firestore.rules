rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ✅ Allow only odd-length paths (valid collections/subcollections)
    match /{path=**} {
      allow read, write: if request.auth != null && path.size() % 2 == 1;
    }

    // ✅ Fallback: Allow authenticated users to access any valid path
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
