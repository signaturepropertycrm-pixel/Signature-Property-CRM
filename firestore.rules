rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return isSignedIn() && request.auth.uid == userId; }
    function isExistingOwner(userId) { return isOwner(userId) && resource != null; }
    function isAdmin()  { return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));  }
    function isAgent()  { return isSignedIn() && exists(/databases/$(database)/documents/roles_agent/$(request.auth.uid));  }
    function isEditor() { return isSignedIn() && exists(/databases/$(database)/documents/roles_editor/$(request.auth.uid)); }

    // ====== agencies (EXACT collection name) ======
    match /agencies/{agencyId} {
      allow get: if isOwner(agencyId);
      allow list: if isOwner(agencyId);   // <-- OPEN GATE â€“ own agency
      allow create: if isOwner(agencyId);
      allow update: if isExistingOwner(agencyId);
      allow delete: if isExistingOwner(agencyId);

      // ===== sub-collections =====
      match /teamMembers {
        allow read, list, write: if isOwner(agencyId);
      }
      match /properties/{propertyId} {
        allow read, list: if isOwner(agencyId);
        allow create: if isOwner(agencyId) && !isAgent();
        allow update, delete: if isExistingOwner(agencyId);
      }
      match /buyers/{buyerId} {
        allow read, list: if isOwner(agencyId);
        allow create: if isOwner(agencyId);
        allow update: if isExistingOwner(agencyId) &&
                      !(isAgent() && request.resource.data.diff(resource.data).affectedKeys().hasAny(['name','email','phone']));
        allow delete: if isExistingOwner(agencyId);
      }
      match /followUps/{followUpId} {
        allow read, list, write: if isOwner(agencyId);
      }
      match /appointments/{appointmentId} {
        allow read, list, write: if isOwner(agencyId) || isAdmin();
      }
    }

    // ===== old /users (keep for legacy) =====
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    // ===== role-indicator docs =====
    match /roles_admin/{userId}  { allow read, write: if isAdmin(); }
    match /roles_agent/{userId}  { allow read: if isAdmin() || isOwner(userId);  allow write: if isAdmin(); }
    match /roles_editor/{userId} { allow read: if isAdmin() || isOwner(userId);  allow write: if isAdmin(); }

    // ===== admin-only =====
    match /transactions/{transactionId} {
      allow read, write: if isAdmin();
    }

    // deny deprecated top-level activityLogs
    match /activityLogs/{activityLogId} {
      allow read, write: if false;
    }
  }
}