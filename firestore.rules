rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ✅ Block invalid paths like agencies/properties
    match /agencies/properties {
      allow read, write: if false;
    }

    match /agencies/buyers {
      allow read, write: if false;
    }

    // ✅ Allow only odd-length paths (safe paths)
    match /{path=**} {
      allow read, write: if isSignedIn() && path.size() % 2 == 1;
    }

    // =================================
    // Helper Functions
    // =================================
    function isSignedIn() {
      return request.auth != null;
    }

    // =================================
    // Collection Rules
    // =================================
    
    // Default open rules: Allow read/write access to any authenticated user.
    // This is a temporary, permissive rule to ensure the application is functional.
    // We can tighten these rules later based on specific requirements.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}