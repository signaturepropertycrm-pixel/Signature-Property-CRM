
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Function to check if a user is an admin.
    // In our new model, only the agency owner is the admin of their data.
    function isAdmin(agencyId) {
      return isOwner(agencyId);
    }

    // Function to check if a user is a registered editor for the given agency.
    function isEditor(agencyId) {
       return isSignedIn() && exists(/databases/$(database)/documents/agencies/$(agencyId)/teamMembers/$(request.auth.uid)) &&
              get(/databases/$(database)/documents/agencies/$(agencyId)/teamMembers/$(request.auth.uid)).data.role == 'Editor';
    }

    // Function to check if a user is a registered agent for the given agency.
    function isAgent(agencyId) {
        return isSignedIn() && exists(/databases/$(database)/documents/agencies/$(agencyId)/teamMembers/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/agencies/$(agencyId)/teamMembers/$(request.auth.uid)).data.role == 'Agent';
    }
    
    // =================================
    // Collection Rules
    // =================================

    // Rules for the /users collection
    // This collection holds login accounts.
    match /users/{userId} {
      // Any signed-in user can read their own user document.
      // An agency admin can read the user documents of their team members.
      allow get: if isOwner(userId);
      // A user can be created on signup.
      allow create: if isSignedIn();
      // Users can update their own profile (e.g., name, avatar).
      allow update: if isOwner(userId);
      // No one can delete user accounts for now.
      allow delete: if false; 
    }

    // Rules for the /agencies collection
    match /agencies/{agencyId} {
      // Only the agency owner (Admin) can manage the agency document and its direct subcollections.
      // Team members (Agents/Editors) can read the main agency doc to get agency-level info.
      allow get: if isAdmin(agencyId) || isAgent(agencyId) || isEditor(agencyId);
      allow list: if isAdmin(agencyId); // Only admin can list agencies (if ever needed).
      allow create, update, delete: if isAdmin(agencyId);

      // Rules for subcollections within an agency
      match /properties/{propertyId} {
        allow read, write: if isAdmin(agencyId) || isEditor(agencyId);
      }

      match /buyers/{buyerId} {
        allow read, write: if isAdmin(agencyId) || isEditor(agencyId);
      }
      
      match /teamMembers/{memberId} {
        // Admin can manage team. Members can read their own entry.
        allow get: if isAdmin(agencyId) || isOwner(memberId);
        allow list, write: if isAdmin(agencyId);
      }
      
      match /appointments/{appointmentId} {
        allow read, write: if isAdmin(agencyId) || isEditor(agencyId);
      }

      match /followUps/{followUpId} {
        allow read, write: if isAdmin(agencyId) || isEditor(agencyId);
      }
      
      match /activityLogs/{activityLogId} {
        allow read: if isAdmin(agencyId) || isEditor(agencyId);
        allow create: if isAdmin(agencyId) || isEditor(agencyId);
        allow update, delete: if false; // Logs should be immutable
      }
    }
    
    // Agent-specific data rules
    // This is the Agent's personal sandbox. Only they can access it.
    match /agents/{agentId} {
        allow read, write: if isOwner(agentId);
        
        match /sharedProperties/{propertyId} {
            allow read, write: if isOwner(agentId);
        }
        
        match /assignedBuyers/{buyerId} {
            allow read, write: if isOwner(agentId);
        }

        match /followUps/{followUpId} {
            allow read, write: if isOwner(agentId);
        }

        match /appointments/{appointmentId} {
            allow read, write: if isOwner(agentId);
        }

        match /activities/{activityId} {
            allow read, write: if isOwner(agentId);
        }
    }
    
    // Top-level role indicators are no longer needed with the new model.
    // We check roles from within the /agencies/{agencyId}/teamMembers subcollection.
    match /roles_admin/{userId} { allow read, write: if false; }
    match /roles_agent/{userId} { allow read, write: if false; }
    match /roles_editor/{userId} { allow read, write: if false; }
  }
}
