
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read/write to their own avatar folder
    match /avatars/{agencyId}/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload their upgrade receipts
    match /upgrade_receipts/{agencyId}/{fileName} {
      allow write: if request.auth != null && request.resource.metadata.ownerId == request.auth.uid;
      allow read: if request.auth != null; // Or more restrictive if needed
    }
    
    // Allow authenticated agency members to manage documents.
    // The {allPaths=**} is a recursive wildcard that matches files in any subdirectories.
    match /documents/{agencyId}/{propertyId}/{allPaths=**} {
      allow read, write: if request.auth != null && exists(/databases/$(database)/documents/agencies/$(agencyId)/teamMembers/$(request.auth.uid));
    }
  }
}
